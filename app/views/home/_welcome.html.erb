<% provide(:title, 'Welcome') %>
<div id="welcome" class="container w-75 mt-5 mb-4 pt-5">
    <p class="text-danger">
    <%= t('welcome.instructions.title', username: current_user.username).html_safe %>
  </p>
  <p class="lead">
    <hr>
    <%= t('welcome.instructions.subtitle') %>
  </p>
  <br/>

  <ul class="list">
    <li class="mb-2"><%= t('welcome.instructions.list.answer_questions') %></li>
    <li class="mb-2"><%= t('welcome.instructions.list.submit_answers') %></li>
    <li class="mb-2"><%= t('welcome.instructions.list.start_quiz') %></li>
  </ul>

  <div class="text-center">
    <hr>
    <%= link_to t('start_quiz'), step_path(id: 1), class: "btn btn-danger mx-auto px-5" %>
  </div>
</div>
